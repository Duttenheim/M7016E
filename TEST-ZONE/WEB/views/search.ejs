<!DOCTYPE html>
<html>	                	 
    <body>
        <section>
            <article class="center-block">  
                          
			<h1><%= title %> page </h1>
			
			<div class="row">
				<div class="col-md-6">
					<table id="searchtable" class="table">
					
					<% var serverList = []; %>
					<% for (var server in servers) { %>
					<% serverList.push(servers[server]); %>
					<% }; %>
					</table>
					
					<button id="runsearch" class="btn btn-default" onclick="PerformSearch('<%= serverList %>')">Search</button>
					<label class="hidden" id="serversearchlabel">No server found</label>
					<script>
						SetupSearch('searchtable', 'runsearch');
					</script>
				</div>
				<div class="col-md-6">
					<table id="nodelist" class="table table-striped table-hover table-bordered">
					<script>
						SetupNodes('nodelist');
					</script>
					</table>
				</div>
			</div>

            </article>
        </section>
    </body>
</html>






